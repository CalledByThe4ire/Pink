.features
	position relative
	margin-bottom 43px

	+above($screen-lg)
		margin-bottom 70px
	background-color #f2f2f2

	&::before
		content ""
		position absolute
		top -35px
		left 0
		right 0
		height 35px
		background-image embedurl("../img/bg/bg-triangle.svg", "utf8")
		background-repeat no-repeat
		background-size 100% 100%

	+above($screen-md)
		&::before
			top -45px
			height 45px

	+above($screen-lg)
		&::before
			top -80px
			height 80px

	&__container
		position relative
		container()
		padding-top 50px
		padding-bottom 320px
		text-align center

		+above($screen-md)
			padding-top 0
			padding-left 0
			padding-right 0
			padding-bottom 0
			text-align left

		&::after
			content ""
			position absolute
			width 157px
			height 280px
			bottom 0
			left 50%
			transform translateX(-50%)
			spriteImage($s-iphone-screen-mobile-1x)
			spritePosition($s-iphone-screen-mobile-1x)
			background-size 1750px 1446px
			background-repeat no-repeat
			+density(1.5)
				spriteImage($s-iphone-screen-mobile-2x)
				background-size 1750px 1446px

			+above($screen-md)
				width 0
				height 0
				background-image none

	&__list
		position relative
		margin 0
		padding 0
		list-style none

		+above($screen-md)
			padding-top 30px
			padding-right 40px
			padding-bottom 35px
			padding-left 350px

			&::before
				content ""
				position absolute
				width 268px
				height 485px
				bottom -30px
				left 40px
				transform none
				spriteImage($s-iphone-screen-tablet-1x)
				spritePosition($s-iphone-screen-tablet-1x)
				background-size 1750px 1446px
				+density(1.5)
					spriteImage($s-iphone-screen-tablet-2x)
					background-size 1750px 1446px

		+above($screen-lg)
			display flex
			justify-content space-between
			padding-top 0
			padding-left 0
			padding-right 0
			padding-bottom 20px
			text-align center
			&::before
				width 0
				height 0
				background-image none

	&__item
		position relative
		margin-bottom 30px

		+above($screen-md)
			margin-bottom 35px

		&:last-child
			margin-bottom 0

		+above($screen-lg)
			&:not([class*="features__item--full-width"])
				width 33%
				padding-left 25px
				padding-right 25px
				padding-top 330px
				margin-top -50px

				&:before
					content ""
					position absolute
					top -25px
					left 50%
					transform translateX(-50%)

				&:nth-child(1)
					&:not(.features__item--full-width)::before
						sprite($s-iphone-screen-desktop-1-1x)
						background-size 1750px 1446px
						+density(1.5)
							sprite($s-iphone-screen-desktop-1-2x)
							background-size 1750px 1446px

				&:nth-child(2)
					&:not(.features__item--full-width)::before
						sprite($s-iphone-screen-desktop-2-1x)
						background-size 1750px 1446px
						+density(1.5)
							sprite($s-iphone-screen-desktop-2-2x)
							background-size 1750px 1446px

				&:nth-child(3)
					&:not(.features__item--full-width)::before
						sprite($s-iphone-screen-desktop-3-1x)
						background-size 1750px 1446px
						+density(1.5)
							sprite($s-iphone-screen-desktop-3-2x)
							background-size 1750px 1446px

		&--full-width
			position relative
			display none

			+above($screen-md)
				display block
				margin-bottom 0
				padding-top 95px
				padding-right 40px
				padding-bottom 80px
				padding-left 350px
				background-color #fff

				& ^[0]__header //.features__header
					font-size 30px
					line-height 36px

			+above($screen-lg)
				padding-top 75px
				padding-bottom 120px
				padding-left 40%
				background-color transparent
				font-size 18px
				line-height 30px

			&::before
				content ""
				position absolute
				left 40px
				top 50%
				transform translateY(-50%)
				width 240px
				height 277px
				background-image embedurl("../img/inline/icon-timer.svg", "utf8")

				+above($screen-lg)
					left 0
					transform translateY(-60%)
					width 298px
					height 345px

	&__header
		margin 0
		padding 0
		padding-bottom 12px
		font-size 18px
		line-height 24px
		font-weight 700
		color $gray-base

		+above($screen-md)
			padding-bottom 10px
			& > span
				display block

		+above($screen-lg)
			padding-bottom 15px
			font-size 30px
			font-weight 700
			line-height 36px
			& > span
				display inline
				padding-bottom 20px
				font-size 30px
				line-height 30px

	&__description
		padding 0
		margin 0
		font-size 14px
		line-height 24px
		font-weight normal
		color $text-color
		+above($screen-md)
			margin-bottom 10px
		+above($screen-lg)
			font-size 18px
			line-height 30px
			margin-bottom 30px

	&__link
		font-size 14px
		line-height 24px
		font-weight normal
		text-decoration underline
		color $link-color

		+above($screen-lg)
			font-size 18px
			line-height 30px
