.contacts
	position relative
	container-fluid()
	text-align center

	&__outer
		position relative
		&::before
			content ""
			position absolute
			bottom -50px
			left 0
			right 0
			height 50px
			background-image embedurl("../img/bg/bg-triangle-footer.svg", "utf8")
			background-repeat no-repeat
			background-size 100% 100%
			z-index 20

			+above($screen-md)
				bottom -70px
				height 70px

			+above($screen-lg)
				bottom -125px
				height 125px

	&__inner
		container()

	&__list
		position relative
		display block
		margin 0
		padding 0
		list-style none

		+above($screen-md)
			display flex
			justify-content space-between
			flex-wrap wrap

		+above($screen-lg)
			justify-content space-around

	&__item
		padding-bottom 25px

		+above($screen-md)
			width 50%
			padding-bottom 45px

			&--full-width
				width 100%
				padding-bottom 30px

		+above($screen-lg)
			width 33%
			padding-bottom 5px
			&:nth-child(1)
				order 1
			&:nth-child(2)
				order 3
			&:nth-child(3)
				order 2

	&__title
		display block
		padding-bottom 5px
		font-size 18px
		font-weight 700
		line-height 1.2
		color $text-color

		+above($screen-md)
			padding-bottom 10px

		+above($screen-lg)
			padding-bottom 25px

	&__link
	&__address
		font-size 24px
		line-height 1.2
		color $link-color

	&__map
		position relative
		height 219px
		background-color $gray-lighter
		background-image url("../img/bg/bg-map-tablet@1x.jpg")
		background-position center
		background-size cover
		z-index 10

		+above($screen-md)
			height 380px
			background-image url("../img/bg/bg-map-desktop@1x.jpg")

		+above($screen-lg)
			height 520px
