.lead
	position relative
	z-index 40
	display none

	+above($screen-md)
		display flex
		justify-content center
		max-width 200px
		margin 0 auto
		margin-bottom 30px

		&__text
			margin 0
			padding 0
			font-size 40px
			line-height 1.2
			font-weight 300
			color #fff

	+above($screen-lg)
		margin-bottom 50px
		&__text
			font-size 50px



.inner-page
	.lead
		display block
		text-align center
		//margin auto
		margin-right 50px
		margin-left 50px

		+above($screen-md)
			max-width 100%
			margin-right 100px
			margin-left 100px

		+above($screen-lg)
			width 960px
			margin auto
			transform none

		&__text
			font-size 24px
			line-height 1.2
			font-weight 300
			color #fff
			text-align center

			+above($screen-md)
				font-size 50px

