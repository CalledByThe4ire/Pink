.response
	display flex
	flex-direction column
	margin 0
	text-align center

	&__author
		display block
		padding-bottom 15px
		font-size inherit
		font-style normal
		font-weight 700
		line-height 30px
		color $gray-base

		+above($screen-md)
			padding-bottom 5px
			font-size 20px

		+above($screen-lg)
			font-size 24px

	&__about
	&__feedback
		font-size 14px
		line-height 30px
		color $text-color

	&__about
		display none

		+above($screen-md)
			display block
			font-size 14px

		+above($screen-lg)
			font-size 18px

	&__feedback
		margin 0
		padding 0

		+above($screen-md)
			font-size 18px
			line-height 30px
			padding-bottom 35px
			order -1
