.app
	&__btn
		btn(15px, 15px, 3px)
		min-width 280px
		border-radius 50px
		font-weight 700
		white-space normal

		&--color-white
			btn-colored(#fff, transparent, #fff)

		&:hover
			color $link-color
			background-color #fff
			border-color #fff
			transition-duration 0.3s

		&:active
			color rgba($link-color, 0.3)
			transition-duration 0s

		+above($screen-md)
			btn(13px, 45px, 3px)
			font-weight 700
			white-space normal

		+above($screen-lg)
			btn(15px, 30px, 3px)
			font-size 21px
			font-weight 700
			white-space normal

	&__os-list
		display flex
		justify-content center
		align-items center
		margin 35px 0 15px
		padding 0
		list-style none

		+above($screen-md)
			margin 45px 0 30px

		+above($screen-lg)
			margin 70px 0 50px

	&__os-item
		margin-right 35px
		&:last-child
			margin-right 0

	&__description
		margin 0
		padding 0
		font-size 14px
		line-height 24px
		font-weight lighter
		color #fff
		+above($screen-md)
			font-size 18px
