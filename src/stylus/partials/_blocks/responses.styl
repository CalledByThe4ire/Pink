.responses-slider
	position relative
	container()

	+above($screen-lg)
		display flex
		flex-direction column
		margin-bottom 90px

	&__mask
		overflow hidden
		padding-bottom 30px

	&__slides
		display flex
		width 300%
		transition-property margin-left
		transition-duration 0.6s

	&__slide
		position relative
		flex-grow 1
		width 100%
		+above($screen-lg)
			padding-top 115px
			padding-left 90px
			padding-right 90px

			&::before
				content ""
				position absolute
				top 0
				left 50%
				transform translateX(-50%)
				width 79px
				height 63px
				background-image embedurl("../img/inline/icon-quotes.svg", "utf8")
				background-repeat no-repeat

	&__input
		display none

	&__controls
		box-sizing content-box
		display flex
		justify-content center

		+above($screen-lg)
			justify-content space-between
			position absolute
			top 50%
			transform translateY(-50%)
			width 100%

	&__control
		width 6px
		height 6px
		margin-right 15px
		background-color #bec2c7
		border 3px solid #fff
		border-radius 50%
		cursor pointer

		&:hover
			background-color #7e868f
			transition-duration 0.3s

		&:active
			background-color rgba(#7e868f, 0.3)
			transition-duration 0.3s
		for i in 1 2 3
			^[0]__input[id=\"responses-slider__slide{i}\"] // .slider__input
				&:checked ~
					& ^[0]__controls
						& ^[0]__control[for=\"responses-slider__slide{i}\"] // .slider__control
							background-color #fff
							border 3px solid $text-color
							transition-duration 0.3s

		+above($screen-lg)
			display none
			width 25px
			height 25px
			margin-right 0
			background-color transparent
			border 2px solid #bec2c7
			border-radius 0
			transform rotate(45deg)

			&:hover
				background-color transparent
				border-color #7e868f
				transition-duration 0.3s

			&:active
				background-color transparent
				border-color #e9ebec
				transition none

			for i in 1 2 3
				^[0]__input[id=\"responses-slider__slide{i}\"] // .slider__input
					&:checked ~
						& ^[0]__controls
							& ^[0]__control[for=\"responses-slider__slide{i}\"] // .slider__control
								background-color transparent
								border 2px solid #bec2c7
								transition none

			^[0]__input[id="responses-slider__slide1"] // .slider__input[id="responses-slide1"]
				&:checked ~
					& ^[0]__controls
						& ^[0]__control // .slider__control
							&:nth-child(2)
								margin-left auto
								display block
								border-bottom-color transparent
								border-left-color transparent

			^[0]__input[id="responses-slider__slide2"] // .slider__input[id="responses-slide2"]
				&:checked ~
					& ^[0]__controls
						& ^[0]__control // .slider__control
							&:nth-child(1)
							&:nth-child(3)
								display block

							&:nth-child(1)
								border-top-color transparent
								border-right-color transparent

							&:nth-child(3)
								border-bottom-color transparent
								border-left-color transparent

			^[0]__input[id="responses-slider__slide3"] // .slider__input[id="responses-slide3"]
				&:checked ~
					& ^[0]__controls
						& ^[0]__control // .slider__control
							&:nth-child(2)
								display block
								border-top-color transparent
								border-right-color transparent

//

slider-loop(3, responses-slider)


