.post
	margin-bottom 20px
	background-color #f2f2f2

	+below($screen-md)
		&:last-child
			margin-bottom 0

	+above($screen-lg)
		margin-bottom 55px

	&__image
		min-width 100%

	&__author
		margin-bottom 5px
		&-name
			font-size 14px
			line-height 14px
			font-weight 700

	&__pubdate
		font-size 12px
		line-height 12px
		font-weight 300
		text-transform uppercase

	&__description
		font-size 14px
		line-height 24px

		+above($screen-md)
			min-height 55px
			flex-basis 100%
			order 15
		p
			margin 0
			margin-bottom 15px
			padding 0
			+above($screen-md)
				margin-bottom 5px

			+above($screen-lg)
				margin-bottom 15px

	&__container
		padding 15px
		background-color #f2f2f2

		+above($screen-md)
			padding 25px
			padding-bottom 15px

		+above($screen-lg)
			padding 25px

	&--choice-of-day
		position relative
		background-color transparent
		line-height 0

		+below($screen-md)
			& > ^[0]__container // .post__container
				margin-left 20px
				margin-right 20px

		+above($screen-md)
			margin-bottom 50px

			& > ^[0]__container // .post__container
				display flex
				flex-wrap wrap
				margin-left 20px
				margin-right 20px

				+above($screen-md)
					margin-left 40px
					margin-right 40px
					padding-bottom 15px

					& ^[0]__author // .post__author
						margin-bottom 0

					& ^[0]__description // .post__description
						min-height auto
						p
							margin-bottom 0

					& .like__counter
						margin-right 20px

				+above($screen-lg)
					width $container-lg
					margin 0 auto
					padding 25px

		&::before
			content attr(data-choice-marker)
			position absolute
			top 0
			right 20px
			min-width 140px
			padding 5px
			text-align center
			color #fff
			font-weight 700
			text-transform uppercase
			font-size 12px
			line-height 24px
			white-space nowrap
			background-color $secondary-color
			+above($screen-md)
				top 55px
				right 40px
			+above($screen-lg)
				right 50%
				transform translateX(430px)
